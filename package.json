{
  "name": "TransGo",
  "displayName": "中英文翻译",
  "description": "侧边栏中英文翻译插件，支持对话翻译、悬浮翻译、朗读、转为驼峰下划线等，现已支持AI翻译（ChatGPT、Claude等）",
  "version": "1.0.6",
  "publisher": "tsinghua-lau",
  "engines": {
    "vscode": "^1.74.0"
  },
  "categories": [
    "Other"
  ],
  "activationEvents": [
    "*"
  ],
  "main": "./out/extension.js",
  "contributes": {
    "configuration": {
      "title": "TransGo",
      "properties": {
        "transgo.provider": {
          "type": "string",
          "enum": [
            "google",
            "baidu",
            "youdao",
            "tencent",
            "ai"
          ],
          "default": "google",
          "description": "翻译服务提供商"
        },
        "transgo.baidu.appid": {
          "type": "string",
          "default": "",
          "description": "百度翻译APPID"
        },
        "transgo.baidu.appkey": {
          "type": "string",
          "default": "",
          "description": "百度翻译密钥"
        },
        "transgo.youdao.appkey": {
          "type": "string",
          "default": "",
          "description": "有道翻译AppKey"
        },
        "transgo.youdao.appsecret": {
          "type": "string",
          "default": "",
          "description": "有道翻译AppSecret"
        },
        "transgo.tencent.secretid": {
          "type": "string",
          "default": "",
          "description": "腾讯翻译SecretId"
        },
        "transgo.tencent.secretkey": {
          "type": "string",
          "default": "",
          "description": "腾讯翻译SecretKey"
        },
        "transgo.ai.configs": {
          "type": "array",
          "default": [],
          "description": "AI翻译配置列表"
        },
        "transgo.ai.currentConfigId": {
          "type": "string",
          "default": "",
          "description": "当前选中的AI翻译配置ID"
        },
        "transgo.state": {
          "type": "object",
          "default": {
            "inputText": "",
            "translationResult": null,
            "camelCaseResult": ""
          },
          "description": "翻译状态数据（内部使用，请勿手动修改）"
        },
        "transgo.showCamelCaseButtons": {
          "type": "boolean",
          "default": true,
          "description": "是否显示驼峰命名转换按钮"
        },
        "transgo.enableHoverTranslation": {
          "type": "boolean",
          "default": false,
          "description": "启用鼠标悬浮翻译"
        },
        "transgo.hoverTranslationDelay": {
          "type": "number",
          "default": 500,
          "minimum": 100,
          "maximum": 2000,
          "description": "悬浮翻译延迟（毫秒）"
        }
      }
    },
    "commands": [
      {
        "command": "translate.openView",
        "title": "打开翻译",
        "icon": "$(symbol-string)"
      },
      {
        "command": "translate.quickTranslate",
        "title": "快速翻译",
        "icon": "src/images/logo-a.png"
      },
      {
        "command": "translate.translateSelection",
        "title": "翻译选中文本",
        "icon": "src/images/logo.svg"
      },
      {
        "command": "transgo.copyText",
        "title": "复制文本",
        "category": "TransGo"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "command": "translate.quickTranslate",
          "when": "resourceScheme == file",
          "group": "navigation"
        }
      ],
      "editor/context": [
        {
          "command": "translate.translateSelection",
          "when": "editorHasSelection",
          "group": "translate"
        }
      ]
    }
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./"
  },
  "repository": {
    "url": "https://github.com/tsinghua-lau/TransGo"
  },
  "devDependencies": {
    "@types/node": "16.x",
    "@types/vscode": "^1.74.0",
    "@vscode/vsce": "^3.6.2",
    "typescript": "^4.9.4"
  },
  "dependencies": {
    "axios": "^1.6.0",
    "say": "^0.13.1"
  },
  "icon": "src/images/logo.png",
  "keywords": [
    "translate",
    "translation",
    "chinese",
    "english"
  ],
  "author": "tsinghua-lau",
  "license": "MIT"
}
